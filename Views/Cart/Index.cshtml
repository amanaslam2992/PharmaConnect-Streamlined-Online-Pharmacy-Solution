@model List<WebProject.Models.Cart>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutCart.cshtml";
}

<div class="site-section">
    <div class="container">
        @if (Model != null && Model.Any())
        {
            <div class="row mb-5">
                <form class="col-md-10" method="post" action="@Url.Action("UpdateCart", "Cart")">
                    <div class="site-blocks-table">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th class="product-thumbnail">Image</th>
                                    <th class="product-name">Product</th>
                                    <th class="product-price">Price</th>
                                    <th class="product-quantity">Quantity</th>
                                    <th class="product-total">Product Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var cartItem in Model)
                                {
                                    <tr>
                                        <td class="product-thumbnail">
                                            <img src="@Url.Content(@cartItem.Product.Product_Img)" alt="Image" class="img-fluid">
                                        </td>
                                        <td class="product-name">
                                            <h2 class="h5 text-black">@cartItem.Product.Product_Name</h2>
                                        </td>
                                        <td>Rs. @cartItem.Product.Price</td>
                                        <td>
                                            <div class="input-group mb-3" style="max-width: 120px;">
                                                <input type="hidden" name="cartItemIds[]" value="@cartItem.Cart_Id" />
                                                <div class="input-group-prepend">
                                                    <button class="btn btn-outline-primary js-btn-minus" type="button">&minus;</button>
                                                </div>
                                                <input type="text" name="quantities[]" class="form-control text-center" value="@cartItem.Quantity" placeholder="" aria-label="Example text with button addon" aria-describedby="button-addon1">
                                                <div class="input-group-append">
                                                    <button class="btn btn-outline-primary js-btn-plus" type="button">&plus;</button>
                                                </div>
                                            </div>
                                        </td>
                                        <td>$@(cartItem.Quantity * cartItem.Product.Price)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <button type="submit" class="btn btn-primary btn-md btn-block">Update Cart</button>
                </form>

                <form class="col-md-2" method="post" action="@Url.Action("RemoveCartItem", "Cart")">
                    <div class="site-blocks-table">
                        <table class="table table-bordered">
                            <thead>
                                <tr style="height: 60px;">
                                    <th class="product-remove">Remove</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var cartItem in Model)
                                {
                                    <tr>
                                        <td style="height: 200px;">
                                            @using (Html.BeginForm("RemoveCartItem", "Cart"))
                                            {
                                                @Html.Hidden("cartItemId", cartItem.Cart_Id)
                                                <button type="submit" class="btn btn-primary height-auto btn-sm">Remove</button>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </form>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="row justify-content-end">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-12 border-bottom mb-5">
                                    <h3 class="text-black h4 text-uppercase">Cart Totals</h3>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <span class="text-black">Subtotal</span>
                                </div>
                                <div class="col-md-6 text-right">
                                    @{
                                        // Calculate Subtotal, handling nullable decimal
                                        decimal subtotal = Model.Sum(item => (item.Quantity * item.Product.Price) ?? 0);
                                    }
                                    <strong class="text-black">@subtotal.ToString("C")</strong>
                                </div>
                            </div>
                            <div class="row mb-5">
                                <div class="col-md-6">
                                    <span class="text-black">Total</span>
                                </div>
                                <div class="col-md-6 text-right">
                                    @{
                                        decimal total = subtotal + 100; // Add Rs. 100 to the subtotal
                                    }
                                    <strong class="text-black">@total.ToString("C")</strong>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <form method="post" action="@Url.Action("PlaceOrder", "Cart")">
                                        <button type="submit" class="btn btn-primary btn-lg btn-block">
                                            Place Order
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>           
        }
        else
        {
        <p>Your cart is empty.</p>
        }
    </div>
</div>