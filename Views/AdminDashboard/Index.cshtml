@{
    ViewBag.Title = "Admin Dashboard";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h3>Products</h3>
<p>
    @Html.ActionLink("Create New Product", "CreateProduct")
</p>
<table class="table">
    <!-- Display product information -->
    @foreach (var product in ViewBag.Products)
    {
        <tr>
            <th>
                Product Id
            </th>
            <th>
                Product Name
            </th>
            <th>
                Product Price
            </th>
            <th>
                Product Image
            </th>
        </tr>
        <tr>
            <td>@product.Product_Id</td>
            <td>@product.Product_Name</td>
            <td>@product.Price</td>
            <td><img src="@Url.Content(@product.Product_Img)" width="150" height="150" /></td>
            <td>
                @Html.ActionLink("Edit", "EditProduct", new { id = @product.Product_Id }) |
                @Html.ActionLink("Details", "DetailsProduct", new { id = @product.Product_Id }) |
                @Html.ActionLink("Delete", "DeleteProduct", new { id = @product.Product_Id })
            </td>
        </tr>

    }
</table>

<h3>Users</h3>
<table class="table">
    <!-- Display user information -->
    @foreach (var user in ViewBag.Users)
    {
        <tr>
            <th>User Id</th>
            <th>User Name</th>
            <th>Role Id</th>
        </tr>
        <tr>
            <td>@user.User_Id</td>
            <td>@user.User_Name</td>
            <td>@user.Role_Id</td>
            <td>
                @Html.ActionLink("Details", "DetailsUser", new { id = @user.User_Id }) |
                @Html.ActionLink("Delete", "DeleteUser", new { id = @user.User_Id })
            </td>
        </tr>
    }
</table>

<h3>Orders</h3>
<table class="table">
    <!-- Display order information -->
    <thead>
        <tr>
            <th>Order ID</th>
            <th>User ID</th>
            <th>Order Date</th>
            <th>Total Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in ViewBag.Orders)
        {
            <tr>
                <td>@order.Order_Id</td>
                <td>@order.User_Id</td>
                <td>@order.Order_Date</td>
                <td>@order.Total_Price</td>
                <td>
                    @Html.ActionLink("Delete", "DeleteOrder", new { id = order.Order_Id })
                </td>
            </tr>
        }
    </tbody>
</table>

<h3>Order Details</h3>
<table class="table">
    <!-- Display order information -->
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Order Detail ID</th>
            <th>Product ID</th>
            <th>Quantity</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var orderdetails in ViewBag.OrderDetails)
        {
            <tr>
                <td>@orderdetails.Order_Id</td>
                <td>@orderdetails.OrderDetail_Id</td>
                <td>@orderdetails.Product_Id</td>
                <td>@orderdetails.Quantity</td>
                <td>@orderdetails.Price</td>
            </tr>
        }
    </tbody>
</table>