@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin2.cshtml";
}

<h3>Users</h3>
<table class="table">
    <!-- Display user information -->
    @foreach (var user in ViewBag.Users)
    {
        <tr>
            <th>User Id</th>
            <th>User Name</th>
            <th>Role Id</th>
        </tr>
        <tr>
            <td>@user.User_Id</td>
            <td>@user.User_Name</td>
            <td>@user.Role_Id</td>
            <td>
                @Html.ActionLink("Details", "DetailsUser", "AdminDashboard", new { id = @user.User_Id }, null) |
                @Html.ActionLink("Delete", "DeleteUser", "AdminDashboard", new { id = @user.User_Id }, null)
            </td>
        </tr>
    }
</table>

