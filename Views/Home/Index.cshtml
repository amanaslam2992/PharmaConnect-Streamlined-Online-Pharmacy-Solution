@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@foreach (var product in ViewBag.Products)
{
    <div class="text-center item mb-4 item-v2">
        <a href="@Url.Action("Index", "Product", new { id = product.Product_Id })"> <img src="@Url.Content(@product.Product_Img)" alt="Image"></a>
        <h3 class="text-dark"><a href="@Url.Action("Index", "Product", new { id = product.Product_Id })">@product.Product_Name</a></h3>
        <p class="price">Rs. @product.Price</p>
    </div>
}